{
  "name": "openfit-monorepo",
  "private": true,
  "packageManager": "bun@1.3.9",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=openfit",
    "dev:openfit": "turbo run dev --filter=openfit",
    "dev:docs": "turbo run dev --filter=docs",
    "dev:mobile-app": "turbo run dev --filter=mobile-app",
    "build": "turbo run build",
    "build:openfit": "turbo run build --filter=openfit",
    "start": "turbo run start --filter=openfit",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "test:coverage": "turbo run test:coverage --filter=openfit",
    "test:e2e": "turbo run test:e2e --filter=openfit",
    "db:init": "turbo run db:init --filter=openfit",
    "db:migrate": "turbo run db:migrate --filter=openfit",
    "db:seed": "turbo run db:seed --filter=openfit",
    "db:seed-mock": "turbo run db:seed-mock --filter=openfit",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "oxlint --fix",
      "prettier --write"
    ],
    "*.{css,html,json,md,mdx,yaml,yml}": "prettier --write"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@commitlint/types": "^20.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.48.0",
    "prettier": "^3.8.1",
    "turbo": "^2.5.6"
  }
}
