# =============================================================================
# OpenFit Environment Variables
# Copy this file to .env.local and fill in your values:
#   cp .env.example .env.local
# =============================================================================

# -----------------------------------------------------------------------------
# BetterAuth
# -----------------------------------------------------------------------------

# Base URL of the application (used for auth callbacks and redirects)
BETTER_AUTH_BASE_URL=http://localhost:3000

# Secret used to sign sessions and tokens
# Required in production. Generate one with:
#   npx @better-auth/cli secret
# or:
#   openssl rand -base64 32
# BETTER_AUTH_SECRET=

# -----------------------------------------------------------------------------
# Admin User (created by `pnpm db:seed`)
# -----------------------------------------------------------------------------

# Email and password for the seeded admin account
# If not set, db:seed skips admin creation
ADMIN_USER=admin@example.com
ADMIN_PASSWORD=changeme123!

# -----------------------------------------------------------------------------
# OAuth Providers (optional)
# -----------------------------------------------------------------------------
# Uncomment and fill in to enable social login.
# Each provider needs both the server-side credentials (AUTH_*)
# and the client-side flag (NEXT_PUBLIC_*) to show the button.

# Google
# AUTH_GOOGLE_ID=
# AUTH_GOOGLE_SECRET=
# NEXT_PUBLIC_AUTH_GOOGLE_ENABLED=true

# GitHub
# AUTH_GITHUB_ID=
# AUTH_GITHUB_SECRET=
# NEXT_PUBLIC_AUTH_GITHUB_ENABLED=true

# Discord
# AUTH_DISCORD_ID=
# AUTH_DISCORD_SECRET=
# NEXT_PUBLIC_AUTH_DISCORD_ENABLED=true

# Generic OIDC (Authentik, Keycloak, Authelia, etc.)
# AUTH_OIDC_CLIENT_ID=
# AUTH_OIDC_CLIENT_SECRET=
# AUTH_OIDC_ISSUER=https://auth.example.com
# NEXT_PUBLIC_AUTH_OIDC_ENABLED=true
# NEXT_PUBLIC_AUTH_OIDC_PROVIDER_NAME=SSO
